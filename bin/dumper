#!/usr/bin/env php
<?php

require __DIR__ . "/../vendor/autoload.php";

echo "Enter LESS code line by line or type \"dump\" (without qoutes) to finish:", PHP_EOL;

$code = "";

while (trim($line = readline()) !== "dump") {
    $code .= PHP_EOL . $line;
}

echo "Dumping...", PHP_EOL;

echo (new LessCompiler\TreeDumper)
    ->dumpTree((new LessCompiler\Less\Parser)->parse($code));

# vim: syntax=php
