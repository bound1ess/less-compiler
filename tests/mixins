.usual-mixin() {
    color: red;
}

.params-mixin(@size, @padding) {
    font-size: @size;
    padding: @padding;
}

@value: 20px;

a:hover {
    .usual-mixin;
}

a {
    .params-mixin(@value, 10px 10px 10px 10px);
}
==============================================
a:hover {
  color: red;
}

